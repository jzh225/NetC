
@{
    ViewBag.Title = "Ueditor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Ueditor</h2>
<div class="control-full" style="text-align:center;">
    <textarea id="content" name="content"></textarea>
</div>

@section scripts{
    <script src="~/Areas/Admin/Content/plugin/ueditor/ueditor.config.js"></script>
    <script src="~/Areas/Admin/Content/plugin/ueditor/ueditor.all.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var editor = new baidu.editor.ui.Editor({
                UEDITOR_HOME_URL: '/Areas/Admin/Content/plugin/ueditor/',//配置编辑器路径
                iframeCssUrl: '/Areas/Admin/Content/plugin/ueditor/themes/iframe.css',//样式路径
                initialContent: '',//初始化编辑器内容
                autoHeightEnabled: true,//高度自动增长
                minFrameHeight: 500,//最小高度
                autoFloatEnabled: false,
                initialFrameWidth: 690,
                initialFrameHeight: 483,
                autosave: false,
                elementPathEnabled: false
            });
            editor.render('content');
        });
    </script>
}

